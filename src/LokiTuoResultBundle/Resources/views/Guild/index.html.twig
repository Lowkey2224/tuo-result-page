{% extends '::base.html.twig' %}

{% block title %}
    {{ 'guild.index.title'|trans }}
{% endblock %}

{% block body %}

    <div class="row">
        <h3 class="col-md-6 col-md-offset-3 text-center">
            {{ 'guild.index.title'|trans }}
        </h3>
    </div>
    <a href="{{ path("loki.tuo.guild.new") }}">{{ 'guild.index.add'|trans }}</a>
    <table class="table table-striped data-table">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ 'table.header.name'|trans }}</th>
            <th>{{ 'table.header.active'|trans }}</th>
            <th>{{ 'table.header.date'|trans }}</th>
            <th>{{ 'links'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for guild in guilds %}
            <tr class="{{ guild.enabled==1?"success":"warning" }}">
                <td>
                    {{ guild.id}}
                </td>
                <td>
                    {{ guild.name }}
                </td>
                <td>
                    {{ guild.enabled ? "active" :"inactive"}}
                </td>
                <td>
                    {{ guild.updatedAt | date("Y-m-d H:i")}}
                </td>
                <td>
                    <a href="{{ path("loki.tuo.guild.edit", {'id': guild.id}) }}">
                        <i class="pull-right glyphicon glyphicon-pencil"></i>Edit
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row" style="margin-top: 20px;">

        {{ 'footer.text'|trans }}<br/>
    </div>
{% endblock %}
