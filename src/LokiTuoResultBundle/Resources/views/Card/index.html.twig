{% extends "::base.html.twig" %}

{% block title %}Known Cards{% endblock %}

{% block body %}
    <h3 id="top">
        {% for letter in letters %}
            <a href="#{{ letter }}">{{ letter }}</a>
        {% endfor %}
    </h3>
    {% for letter, cards in cardsArray %}
        <h1 id="{{ letter }}">{{ letter }} <small><a href="#top">{% trans %}Back to top{% endtrans %}</a> </small></h1>
        {% for card in cards %}
            {{ card.name }}<br/>
        {% endfor %}
    {% endfor %}
    <br/>
    {% trans %}TotalCardCount{% endtrans %} {{ count }}.<br/>
    <a href="#top">{% trans %}Back to top{% endtrans %}</a>
{% endblock %}
