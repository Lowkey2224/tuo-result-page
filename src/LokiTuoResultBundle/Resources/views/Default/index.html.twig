{% extends '::base.html.twig' %}

{% block title %}CTP/CNS Simming Results{% endblock %}

{% block body %}
    {#{% if is_granted('ROLE_ADMIN') %}#}
        <!-- Modal -->
        <div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="uploadModalLabel">Upload your Simulation Result here</h4>
                    </div>
                    <div class="modal-body">
                        {{ form_start(form) }}

                        <div class="form-group">
                            {{ form_row(form.file) }}
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        {{ form_widget(form.submit, {'attr' : {'class': 'btn btn-success'}}) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    {#{% endif %}#}


    <div class="row" style="padding: 5px">
    {% if is_granted('ROLE_ADMIN') %}
        <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#uploadModal">
            Upload Sim Result
        </button>
    {% endif %}
        <a href="{{ path('loki.tuo.sim.create') }}">
        <button type="button" class="btn btn-info btn-md pull-right">
            Create Simulation Script
        </button>
        </a>
    </div>

    <table class="table table-striped data-table">
        <thead>
        <tr>
            {#<th>#</th>#}
            <th>Mission</th>
            <th>Guilds</th>
            <th>Type</th>
        </tr>
        </thead>
        <tbody>
        {% for mission in missions %}
            <tr>
                {#<td>{{ loop.index }}</td>#}
                <td>
                    <a href="{{ path('tuo.showmission', {'missionId': mission.id}) }}">
                        {{ mission.name }}
                    </a>
                </td>
                <td>
                    {% for guild in mission.guilds %}
                        [{{ guild }}]
                        {% if not loop.last %}
                            ,
                        {% endif %}
                    {% endfor %}
                </td>
                <td>{{ mission.type }}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>



    <div class="row">
        <a href="{{ path('loki.tuo.player.all.show') }}"><h4>Playerlist</h4></a>
    </div>

    <div class="row" style="margin-top: 20px;">

        Simulations and website done by LokiMcFly<br/>
    </div>
{% endblock %}