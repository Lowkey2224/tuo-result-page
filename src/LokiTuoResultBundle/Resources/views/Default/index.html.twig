{% extends '::base.html.twig' %}

{% block title %}CTP/CNS Simming Results{% endblock %}

{% block body %}

    {#{% include '@LokiTuoResult/partials/UploadModal.html.twig' with {'form': form} only %}#}

    <div class="row" style="padding: 5px">
        {#{% if is_granted('ROLE_ADMIN') %}#}
        {#<button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#uploadModal">#}
        {#Upload Sim Result#}
        {#</button>#}
        {#{% endif %}#}
        <a href="{{ path('loki.tuo.sim.create') }}">
            <button type="button" class="btn btn-info btn-md pull-right">
                Create Simulation Script
            </button>
        </a>
    </div>

    <table class="table table-striped data-table">
        <thead>
        <tr>
            {#<th>#</th>#}
            <th>Mission</th>
            <th>Guilds</th>
            <th>Type</th>
            <th>Last Updated at</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th>Links</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for mission in missions %}
            <tr>

                <td>
                    <a href="{{ path('tuo.showmission', {'missionId': mission.0.id}) }}">
                        {{ mission.0.name }}
                    </a>
                </td>
                <td>
                    {{ mission.1 }}
                </td>
                <td>{{ mission.0.type }}</td>

                <td>
                    {{ mission.0.updatedAt }}
                </td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a href="{{ path('loki.tuo.mission.edit', {'missionId': mission.0.id}) }}">
                            Edit
                        </a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}

        </tbody>
    </table>



    <div class="row">
        <a href="{{ path('loki.tuo.player.all.show') }}"><h4>Playerlist</h4></a>
    </div>

    <div class="row" style="margin-top: 20px;">

        Simulations and website done by LokiMcFly<br/>
    </div>
{% endblock %}