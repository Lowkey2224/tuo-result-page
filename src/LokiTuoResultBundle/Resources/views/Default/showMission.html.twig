{% extends '::base.html.twig' %}

{% block body %}
    <div class="row" style="margin-top: 20px;">
        <div class="col-md 3">
            <a href="{{ path("tuo.index") }}"><p class="pull-left">back to overview</p></a>
        </div>
        <div class="col-md-6 text-center">
            <h2 style="margin-top: 0;">Result for {{ mission.name }}</h2>
        </div>
    </div>
    {% for result in results %}
        {% if result.percent > 850 %}
            {% set class = "panel-success" %}
        {% elseif result.percent > 650 %}
            {% set class = "panel-info" %}
        {% elseif result.percent > 500 %}
            {% set class = "panel-warning" %}
        {% else %}
            {% set class = "panel-danger" %}
        {% endif %}
        <div class="panel {{ class }}">
            <div class="panel-heading">

                Player: <b>{{ result.player.name }}</b> with {{ result.percent/10 | number_format(2) }}%
                <a href="{{ path("tuo.resultfile.show", {'fileId': result.sourceFile.id}) }}"><i class="pull-right glyphicon glyphicon-floppy-save"></i></a>


            </div>
            <div class="panel-body">
                {% for deckEntry in result.deck %}
                    {{ deckEntry.card.name }}<br/>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
    <div class="row" style="margin-top: 20px;">
        <div class="pull-left"><a href="{{ path("tuo.index") }}">back to overview</a></div>
    </div>
{% endblock %}

