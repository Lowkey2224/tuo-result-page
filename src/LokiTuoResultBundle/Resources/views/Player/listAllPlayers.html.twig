{% extends '::base.html.twig' %}
{% block body %}
    <div class="row">
        <h3 class="col-md-6 col-md-offset-3 text-center">
            All Current and Past Players, who were simmed
        </h3>
    </div>

    <table class="table table-striped data-table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Guild</th>
            <th>Links</th>
        </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>
                    {{ player.name }}
                </td>
                <td>
                    {{ player.currentGuild }}
                </td>
                <td>
                <a href="{{ path('loki.tuo.player.cards.show', {'playerId': player.id}) }}">
                    <b>Cards</b>
                </a>
                <a href="{{ path('loki.tuo.player.results.show', {'playerId': player.id}) }}">
                    <b>Simulations</b>
                </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row" style="margin-top: 20px;">

        Simulations and website done by LokiMcFly<br/>
    </div>
{% endblock %}