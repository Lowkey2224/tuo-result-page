{% extends '::base.html.twig' %}
{% block body %}

    <div class="row">
        <h3 class="col-md-6 col-md-offset-3 text-center">
            {{ 'player.index.title'|trans }}
        </h3>
    </div>
    <div id="updateFlash"></div>

    <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#addPlayerModal">
        {{ 'player.index.add.player'|trans }}
    </button>
    {% if showUpdateButton %}
    <button id="update-link" role="button" type="button" class="ladda-button" data-style="contract" data-color="blue" data-size="xs">
        {{ 'update.inventories'|trans }}
    </button>
    {% endif %}

    <table class="table table-striped data-table">
        <thead>
        <tr>
            <th data-priority="1">{{ 'table.header.name'|trans }}</th>
            <th >{{ 'table.header.guild'|trans }}</th>
            <th data-priority="3">{{ 'table.header.owner'|trans }}</th>
            <th >{{ 'table.header.date'|trans }}</th>
            <th data-priority="2" class="text-right">{{ 'links'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr class="{{ player.active?"success":"warning" }}">
                <td>
                    <a href="{{ path('loki.tuo.player.results.show', {'id': player.id}) }}">{{ player.name }}
                    </a>
                </td>
                <td>
                    {{ player.guild }}
                </td>
                <td>
                    {% if player.owner %}
                        {{ player.owner.username }}
                        {% if is_granted('ROLE_MODERATOR') and not player.ownershipConfirmed %}
                            <a href="{{ path('loki.tuo.player.claim.confirm', {'id': player.id}) }}">
                                <b>confirm</b>
                            </a>
                        {% endif %}
                    {% endif %}
                    {% if player.hasKongCredentials %}
                        <i class="glyphicon glyphicon-cloud-upload"></i>
                    {% endif %}
                </td>
                <td>
                    {{ player.updatedAt | date('Y-m-d H:i') }}
                </td>
                <td class="text-right">
                    <a href="{{ path('loki.tuo.ownedcard.cards.show', {'id': player.id}) }}">
                        <b>Cards</b>
                    </a>

                    <a href="{{ path('loki.tuo.player.edit', {'id': player.id}) }}" name="Edit">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row" style="margin-top: 20px;">

        {{ 'footer.text'|trans }}<br/>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    $(function () {
        $('#update-link').click(function () {
            var laddaButton = Ladda.create(document.querySelector('#update-link'));
            laddaButton.start();


            var address = "{{ path("loki.tuo.ownedcard.card.update.all") }}";
            $.ajax({
                url: address,
                error: function (response, textStatus, errorThrown) {
                    var flash = null;
                    var empty = '<div class="alert alert-dismissible alert-%errorType%" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>%errorMsg%</div>';
                    if (textStatus === "error" && errorThrown === "Gateway Time-out") {
                        flash = empty.replace('%errorType%', 'warning').replace('%errorMsg%', '{% trans %}ownedcard.player.update.timeout{% endtrans %}');
                    } else if (textStatus === "error" && errorThrown === "Conflict") {
                        flash = empty.replace('%errorType%', 'danger').replace('%errorMsg%', '{% trans %}ownedcard.player.update.no_credentials{% endtrans %}');
                    }
                    console.log(flash);
                    if(flash) {
                        $('#updateFlash').append(flash);
                    }else {
                        console.log("NO Flash set");
                    }
                    laddaButton.stop();
                    console.log("Fail Response", response);
                    console.log("Status", textStatus, " error", errorThrown);

                },
                success: function () {
                    laddaButton.stop();
                    console.log("success");
                    location.reload();
                }
            });

        });
    });
</script>
{% endblock %}