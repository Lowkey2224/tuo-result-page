{% extends '::base.html.twig' %}
{% block body %}

    <div class="modal fade" id="addPlayerModal" tabindex="-1" role="dialog" aria-labelledby="addPlayerModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="addPlayerModalLabel">Upload your Simulation Result here</h4>
                </div>
                <div class="modal-body">
                    {{ form_start(form) }}

                    <div class="form-group">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.currentGuild) }}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    {{ form_widget(form.submit, {'attr' : {'class': 'btn btn-success'}}) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <h3 class="col-md-6 col-md-offset-3 text-center">
            All Current and Past Players, who were simmed
        </h3>
    </div>

    <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#addPlayerModal">
        Add Player
    </button>

    <table class="table table-striped data-table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Guild</th>
            <th>Owner</th>
            <th>Last Updated</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th>Active</th>{% endif %}
            <th class="text-right">Links</th>
        </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>
                    {{ player.0.name }}
                </td>
                <td>
                    {{ player.0.currentGuild }}
                </td>
                <td>
                    {{ player.0.owner?player.0.owner.username:"" }}
                </td>
                <td>
                        {{ player.updated }}
                </td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        {{ player.0.active ? "active":"deactivated" }}
                    </td>
                {% endif %}
                <td class="text-right">
                    <a href="{{ path('loki.tuo.player.cards.show', {'playerId': player.0.id}) }}">
                        <b>Cards</b>
                    </a>
                    <a href="{{ path('loki.tuo.player.results.show', {'playerId': player.0.id}) }}">
                        <b>Simulations</b>
                    </a>
                    <a href="{{ path('loki.tuo.player.edit', {'playerId': player.0.id}) }}">
                        <b>Edit</b>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row" style="margin-top: 20px;">

        Simulations and website done by LokiMcFly<br/>
    </div>
{% endblock %}