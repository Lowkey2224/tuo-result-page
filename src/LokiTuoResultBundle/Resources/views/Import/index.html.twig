{% extends '::base.html.twig' %}
{% block body %}

    <div class="row">
        <h3 class="col-md-6 col-md-offset-3 text-center">
            All Resultfiles and their Status
        </h3>
    </div>

    <table class="table table-striped data-table">
        <thead>
        <tr>
            <th>#</th>
            <th>Guild</th>
            <th>Missions</th>
            <th>comment</th>
            <th>Status</th>
            <th>Date</th>
            <th>Links</th>
        </tr>
        </thead>
        <tbody>
        {% for file in resultFiles %}
            <tr class="{{ file.status==1?"success":"warning" }}">
                <td>
                    {{ file.id}}
                </td>
                <td>
                    {{ file.guild }}
                </td>
                <td>
                    {{ file.missions }}
                </td>
                <td>
                    {{ file.comment }}
                </td>
                <td>
                    {{ file.statusName }}
                </td>
                <td>
                    {{ file.updatedAt | date("Y-m-d H:i")}}
                </td>
                <td>
                    <a href="{{ path("tuo.resultfile.show", {'fileId': file.id}) }}">
                        <i class="pull-right glyphicon glyphicon-floppy-save"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row" style="margin-top: 20px;">

        Simulations and website done by LokiMcFly<br/>
    </div>
{% endblock %}
