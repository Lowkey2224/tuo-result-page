{% extends '::base.html.twig' %}

{% block title %}{{ 'simulation.edit.title %name%'|trans({'%name%' : mission.name}) }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="panel panel-info">
            <div class="panel-heading">
                {{ 'simulation.edit.title %name%'|trans({'%name%' : mission.name}) }}
                <a class="btn btn-xs btn-info pull-right" href="{{ path('tuo.index') }}">
                    <span class="glyphicon glyphicon-chevron-left">{{ 'back'|trans }}</span>
                </a>
            </div>
            <div class="panel-body">
                {{ form_start(form) }}
                <div class="form-group">

                    {{ form_row(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.type) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.submit) }}
                    {% if is_granted('ROLE_MODERATOR') %}
                        <div class="pull-right">
                            <button class="btn btn-warning"
                                    formaction="{{ path('loki.tuo.mission.delete', {'id': mission.id}) }}">
                                {{ 'delete'|trans }}
                            </button>
                        </div>

                    {% endif %}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


    <div class="row" style="margin-top: 20px;">

        {{ 'footer.text'|trans }}<br/>
    </div>
{% endblock %}
