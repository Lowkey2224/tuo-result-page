{% extends '::base.html.twig' %}

{% block title %}CTP/CNS Simming Results{% endblock %}

{% block body %}

    <div class="row" style="padding: 5px">
        <a href="{{ path('loki.tuo.sim.create') }}">
            <button type="button" class="btn btn-info btn-md pull-right">
                Create Simulation Script
            </button>
        </a>
    </div>

    <div class="container">
        <div class="panel panel-info">
            <div class="panel-heading">
                Edit Player {{ mission.name }}
            </div>
            <div class="panel-body">
                {{ form_start(form) }}
                <div class="form-group">

                    {{ form_row(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.type) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.submit) }}
                    {% if is_granted('ROLE_MODERATOR') %}
                        <div class="pull-right">
                            <button class="btn btn-warning"
                                    formaction="{{ path('loki.tuo.mission.delete', {'missionId': mission.id}) }}">
                                {# TODO replace with Translation#}
                                Delete
                            </button>
                        </div>

                    {% endif %}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


    <div class="row" style="margin-top: 20px;">

        Simulations and website done by LokiMcFly<br/>
    </div>
{% endblock %}